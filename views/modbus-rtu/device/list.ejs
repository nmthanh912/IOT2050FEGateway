<% layout('../../layout/index') %> <% block('css', `

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" />
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css"
/>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>

`) %>

<!-- Content Header (Page header) -->
<div class="container">
    <section class="content-header">
        <h1 style="font-weight: 600">Modbus RTU</h1>
        <small>DEVICE</small>
        <ol class="breadcrumb">
            <li>
                <a href="/"><i class="fas fa-home"></i> Home</a>
            </li>
            <li class="active">Device</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div>
            <div class="box-header" style="text-align: center; margin-bottom: 15px">
                <h3 class="box-title" style="font-size: 25px">Manage Device</h3>
            </div>
            <div class="panel-heading">
                <a
                    class="btn"
                    href="/modbus-rtu/device/add"
                    style="background-color: rgb(60 141 188); color: white; margin-left: -14px"
                    >Add device</a
                >
            </div>
            <div>
                <div>
                    <table class="table table-bordered table-striped">
                        <thead style="background-color: #3c8dbc; color: white">
                            <tr>
                                <th>Name</th>
                                <th>Com Port Number</th>
                                <th>BaudRate</th>
                                <th>Databits</th>
                                <th>Parity</th>
                                <th>Stopbits</th>
                                <th>Slave ID</th>
                                <th style="text-align: center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% devices.forEach(function(val) { %>
                            <tr style="font-size: 14px">
                                <td style="line-height: 2.5"><span><%= val.name %></span></td>
                                <td style="line-height: 2.5"><%= val.com_port_num %></td>
                                <td style="line-height: 2.5"><%= val.baudrate %></td>
                                <td style="line-height: 2.5"><%= val.databits %></td>
                                <td style="line-height: 2.5"><%= val.parity %></td>
                                <td style="line-height: 2.5"><%= val.stopbits %></td>
                                <td style="line-height: 2.5"><%= val.slave %></td>
                                <td class="text-center">
                                    <a class="btn" href="/modbus-rtu/device/edit/<%= val.id %>">
                                        <span style="color: rgb(60 141 188)">
                                            <i class="fas fa-edit" style="margin-right: 3px"></i>
                                            Edit
                                        </span>
                                    </a>
                                    <a class="btn" href="/modbus-rtu/device/delete/<%= val.id %>">
                                        <span style="color: rgb(246 18 18)">
                                            <i class="fas fa-trash-alt" style="margin-right: 3px"></i>
                                            Delete
                                        </span>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <% block('script', ` `) -%>
</div>
