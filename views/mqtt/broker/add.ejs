<% layout('../../layout/index') %> <% block('css', ` `) %>

<!-- Content Header (Page header) -->
<div class="container">
    <section class="content-header">
        <ol class="breadcrumb">
            <li>
                <a href="/"><i class="fas fa-home"></i> Home</a>
            </li>
            <li class="active">MQTT</li>
        </ol>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">
        <div class="box-header" style="margin-bottom: 15px; margin-left: -10px">
            <h3 class="box-title" style="font-size: 25px; font-weight: bold">Add New Broker</h3>
        </div>
        <!-- /.box-header -->
        <div class="box">
            <div class="box-body no-padding">
                <div class="col-md-9" style="margin-bottom: 20px; margin-top: 10px">
                    <form method="post" action="/mqtt/broker/add">
                        <div class="form-row">
                            <div class="col-md-6 mb-6 col-sm-6">
                                <label>Name</label>
                                <input type="text" class="form-control" name="name" placeholder="name..." value="" />
                            </div>
                            <div class="col-md-6 mb-6 col-sm-6">
                                <label>IP/Address</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="ip"
                                    placeholder="ip/address..."
                                    value=""
                                />
                            </div>
                            <!-- <div class="col-md-4 mb-3 col-sm-6">
              <label>Topic</label>
              <input type="text" class="form-control" name="broker" placeholder="broker..."
                value="">
            </div> -->

                            <div class="col-md-6 mb-3">
                                <label style="margin-top: 20px">Username</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="username"
                                    placeholder="username..."
                                    value=""
                                />
                            </div>
                            <div class="col-md-6 mb-6 col-sm-6">
                                <label style="margin-top: 20px">Password</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="password"
                                    placeholder="password..."
                                    value=""
                                />
                            </div>
                            <div class="col-md-6 mb-6 col-sm-6">
                                <label style="margin-top: 20px">Port</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="port"
                                    placeholder="port..."
                                    value="1883"
                                    required
                                />
                            </div>
                            <div class="col-md-6 mb-6 col-sm-6">
                                <label style="margin-top: 20px">Topic</label>
                                <input type="text" class="form-control" name="topic" placeholder="Topic..." value="" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-12 mb-3 col-sm-6">
                                <br />
                                <button
                                    class="btn"
                                    type="submit"
                                    style="background-color: #3c8dbc; color: white; margin-right: 10px"
                                >
                                    Add new
                                </button>
                                <a style="background-color: #717887" class="btn" href="/mqtt/broker">
                                    <span style="color: white"> Cancel </span>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-3" style="margin-bottom: 20px; margin-top: 10px">
                    <img src="/img/mosquitto.png" width="200px" />
                </div>
            </div>
        </div>
    </section>
</div>
<% block('script', ` `) -%>
